<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFrom" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" tools:text="From Prutchakorn Ngamsuanplu" android:textSize="18sp"
            android:textColor="#000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFromPromptPay" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFrom" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" tools:text="Prompt Pay ID 0876831209" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvToPromptPay" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFromPromptPay" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" tools:text="To Prompt Pay ID 0876831209" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvToPromptPay" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:text="Due Date 29 Jan 2019" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAmount"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" tools:text="2.00"
            android:textColor="#000000" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tvCurrency"/>
    <TextView
            android:text="THB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCurrency" android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/tvAmount"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>