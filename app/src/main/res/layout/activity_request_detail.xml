<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.request.RequestDetailActivity">

    <TextView
            android:text="TRANSFER"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:background="#FFC107"
            android:id="@+id/tvTransfer" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="sans-serif-black" android:textSize="14sp"/>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/tvTransfer" android:layout_marginBottom="16dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Requester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="12sp"
                    android:layout_marginStart="72dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRequesterName" tools:text="Poom"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3" android:textSize="18sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"/>
            <TextView
                    android:text="Payer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRequesterPromptPay"
                    app:layout_constraintStart_toStartOf="@+id/tvRequesterPromptPay"
                    android:textSize="12sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPayerName" tools:text="Prutchakorn Ngamsuanplu"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/textView5" android:textSize="18sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRequesterPromptPay" tools:text="0830503165"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvRequesterName"
                    app:layout_constraintStart_toStartOf="@+id/tvRequesterName" android:textSize="12sp"/>
            <TextView
                    android:text="0876831209"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPayerPromptPay" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPayerName"
                    app:layout_constraintStart_toStartOf="@+id/tvPayerName"
                    android:textSize="12sp"/>
            <TextView
                    android:text="Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPayerPromptPay"
                    app:layout_constraintStart_toStartOf="@+id/tvPayerPromptPay"
                    android:textSize="12sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAmount" tools:text="2.00 THB"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textView9" android:textSize="18sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"/>
            <TextView
                    android:text="Due Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvAmount"
                    app:layout_constraintStart_toStartOf="@+id/tvAmount" android:textSize="12sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDueDate" tools:text="30 Jan 2019"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    app:layout_constraintStart_toStartOf="@+id/textView11" android:layout_marginTop="8dp"
                    android:textSize="18sp" android:textColor="#000000" android:fontFamily="sans-serif-medium"/>
            <TextView
                    android:text="Transaction Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDueDate"
                    app:layout_constraintStart_toStartOf="@+id/tvDueDate"
                    android:textSize="12sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTransactionDate" tools:text="30 Jan 2019 22:12:13"
                    app:layout_constraintTop_toBottomOf="@+id/textView13"
                    app:layout_constraintStart_toStartOf="@+id/textView13"
                    android:layout_marginTop="8dp" android:textSize="18sp" android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"/>
            <TextView
                    android:text="Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTransactionDate"
                    app:layout_constraintStart_toStartOf="@+id/tvTransactionDate" android:textSize="12sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStatus" tools:text="Waiting"
                    app:layout_constraintTop_toBottomOf="@+id/textView15"
                    app:layout_constraintStart_toStartOf="@+id/textView15" android:layout_marginTop="8dp"
                    android:textColor="#000000" android:textSize="18sp" android:fontFamily="sans-serif-medium"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
    <TextView
            android:text="Request detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="30sp"
            android:textColor="#000000" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="sans-serif-black"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_alert"
            android:id="@+id/imageView" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"/>


</android.support.constraint.ConstraintLayout>